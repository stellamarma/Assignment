{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,  // Προσθήκη για την υποστήριξη της εισαγωγής τύπων
    "allowJs": true,          // Επιτρέπει την εργασία με αρχεία .js
    "skipLibCheck": true      // Αγνοεί τα σφάλματα στις βιβλιοθήκες τύπων
  }
}
